{
	"extends": [
		"stylelint-config-wordpress",
		"stylelint-config-idiomatic-order",
		"stylelint-config-prettier"
	],
	"rules": {
		"block-no-empty": null,
		"selector-class-pattern": null,
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"layer",
					"extends",
					"apply",
					"tailwind",
					"components",
					"utilities",
					"screen"
				]
			}
		]
	}
}
