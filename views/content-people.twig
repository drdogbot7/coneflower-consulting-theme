<article {{ function('post_class') }}>
  <div class="justify-around my-8 md:flex">
    <div class="w-2/3 mx-auto md:w-1/3">
        <img
          class="shadow-brand" alt="{{ post.title }}"
          src="{{ post.thumbnail.src|resize(350) }}"
          srcset="{{ post.thumbnail.src|resize(350) }} 1x, {{ post.thumbnail.src|resize(700) }} 2x,"
        />
    </div>
    <div class="mt-8 md:mt-0 md:ml-8 md:w-1/2 md:max-w-3xl lg:ml-12">
        <header>
          <h1 class="text-5xl font-thin text-purple-500">{{ post.title }}</h1>
          <div class="mt-2 text-purple-400 uppercase">{{ post.job_title }}
        </header>
        <div class="my-4 prose lg:prose-lg">
            {{ post.content }}
        </div>
    </div>
  </div>
</article>