{% extends "views/base.twig" %}

{% block content %}

<div class="container max-w-2xl my-8 prose lg:max-w-3xl sm:prose-sm lg:prose-lg">
  <header class="page-header">
    <h1>Password Protected Content</h1>
  </header>
  <p>
    <b>Enter the password below to view this content.</b>
  </p>
  <form class="flex"
    action="{{ site.site_url }}/wp-login.php?action=postpass"
    method="post">
    <label class="screen-reader-text" for="pwbox-{{ post.ID }}">
      Password:
    </label>
    <input class="border-gray-200 rounded-l"
      name="post_password"
      id="pwbox-{{ post.ID }}"
      type="password"
      placeholder="Password"
      size="20"
      maxlength="20" />
    <input class="rounded-l-none btn"
      type="submit"
      name="Submit"
      value="Submit" />
  </form>
</div>

{% endblock %}