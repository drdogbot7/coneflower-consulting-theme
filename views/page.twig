{% extends "views/base.twig" %}

{% block content %}

<div class="container max-w-2xl my-8 prose lg:max-w-3xl sm:prose-sm lg:prose-lg">
  {% if not post.hide_page_title %}
  <header class="page-header">
    <h1>{{ post.title }}</h1>
  </header>
  {% endif %}
  
  {{ post.content }}
</div>

{% endblock %}