{% extends "views/base.twig" %}

{% block content %}

<div class="container max-w-2xl my-8 prose lg:max-w-3xl lg:prose-lg">

  <article {{ function('post_class') }}>
    <header>
      <h1 class="entry-title">{{ post.title }}</h1>
    </header>
    {{ post.content }}
  </article>

</div>

{% endblock %}